rules_version = '2';

// Firebase Storage Security Rules for Health Records
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isDoctor() {
      return isAuthenticated() &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'doctor';
    }
    
    // Health Records: healthRecords/{patientUid}/{recordId}/{fileName}
    match /healthRecords/{patientUid}/{recordId}/{fileName} {
      // Patients can upload their own health records
      allow create: if isAuthenticated() && isOwner(patientUid);
      
      // Patients can read their own records
      // Doctors can read if they have appointment access (checked in Firestore rules)
      // Admin can read all
      allow read: if isAuthenticated() && (
        isOwner(patientUid) ||
        isDoctor() ||
        isAdmin()
      );
      
      // Only patients and admins can delete
      allow delete: if isAuthenticated() && (
        isOwner(patientUid) ||
        isAdmin()
      );
      
      // File size limit: 10MB - must be authenticated and owner
      allow write: if isAuthenticated() && 
                      isOwner(patientUid) && 
                      request.resource.size < 10 * 1024 * 1024;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
